{
  "name": "smarthome-mcp-server-nodejs",
  "version": "1.0.0",
  "description": "MCP server for controlling Matter-compatible smart home lights via Claude",
  "main": "./build/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build",
    "inspect": "npx @modelcontextprotocol/inspector tsx src/index.ts"
  },
  "keywords": [
    "mcp",
    "matter",
    "smart-home",
    "iot",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@matter/main": "^0.13.0",
    "@matter/nodejs": "^0.13.0",
    "@matter/nodejs-shell": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}